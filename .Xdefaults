! Xresource file

URxvt*depth: 24
URxvt*geometry: 100x25
URxvt.borderColor: #111113
URxvt.internalBorder: 8
!URxvt.cursorUnderline: true
!URxvt.cursorBlink: true

Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


! -- scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt*scrollTtyOuput: false
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true

! -- login shell
URxvt*loginShell: false

! -- font
!URxvt.font: xft:Terminus:size=12
URxvt.font: xft:Droid Sans Mono:size=10
!URxvt.font: xft:Ubuntu Mono:size=12
!URxvt.font: xft:PragmataPro:size=10
!URxvt.font: xft:Inconsolata:size=10
!URxvt*font: xft:DejaVu Sans Mono:size=10
!URxvt.font: xft:berry:pixelsize=12
!URxvt.font: xft:tewi-8
!URxvt.font: xft:tamsyn:size=8
!URxvt.font: xft:cure-8
URxvt*letterSpace: -1
!URxvt*lineSpace: 2

! -- perl
URxvt.perl-ext-common: default,clipboard,vtwheel,matcher
URxvt.keysym.Mod4-v: perl:clipboard:paste
URxvt.url-launcher: /usr/local/bin/firefox
URxvt.matcher.button: 1
!URxvt.colorUL: #9472ec

! -- tabs
!lURxvt.tabbed.tabbar-fg: 8
!lURxvt.tabbed.tabbar-bg: 0
!lURxvt.tabbed.tab-fg: 15
!lURxvt.tabbed.tab-bg: 0

!URxvt*.transparent: true
!URxvt*.shading: 30

